 <section class="todoapp">
  <header class="header">
    <h1><%= @list.name %></h1>
    <%= form_for(@item, :url => list_items_path(@list)) do |f| %>
    <form action="/lists" methid="POST">
    <%= f.text_field :description, :class => "new-todo", :placeholder => (@list.errors.full_messages_for(:name).first || "Enter a new list name...") %>
    <%= f.submit :style => "display: none" %>
    <% end %>
  </header>
  <section class="main">
    <input class="toggle-all" type="checkbox">
    <label for="toggle-all"> Mark all as complete </label>
    <ul class="todo-list">
      <% @list.items.each do |item| %>
    	<li>
        <div class="view">
          <label><%=item.description%></label>
        </div>
      </li>
      <%end%>
    </ul>
  </section>
  <footer class="footer">
  </footer>
</section>